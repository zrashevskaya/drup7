/**
 * Implements hook_field_formatter_view().
 */
function d7_youtube_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  require_once 'd7_youtube.inc';
  if (!empty($items)) {
    foreach ($items as $key => $item) {
      $element[$key] = [];
      if ($display['type'] == 'd7_youtube') {
        $element[$key] += [
          'frame' => FALSE,
          'url' => $item['youtube_url'],
          'attributes' => ['target' => '_blank'],
          'value' => $entity->title . ' ' . t('video') . ' ' . ($key + 1),
        ];
      }
      elseif ($display['type'] == 'd7_youtube_frame') {
        $element[$key] += [
          'frame' => TRUE,
          'iframe_url' => glue_url(parse_url($item['youtube_url'])),
          'attributes' => [
            'width' => $item['youtube_width'],
            'height' => $item['youtube_height'],
          ],
        ];
        if ($field['settings']['d7_youtube_showinfo'] == 0) {
          $element[$key]['iframe_url'] .= '?showinfo=0';
          if ($item['youtube_control'] == 0) {
            $element[$key]['iframe_url'] .= '&amp;controls=0';
          }
        }
        else {
          if ($item['youtube_control'] == 0) {
            $element[$key]['iframe_url'] .= '?controls=0';
          }
        }
      }
    }
    return $element;
  }
}

/**
 * Implements hook_field_settings_form().
