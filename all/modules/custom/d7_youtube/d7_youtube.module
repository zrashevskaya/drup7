  $form['d7_youtube_showinfo'] = [
    '#type' => 'radios',
    '#title' => t('Would you like to see video info above the video?'),
    '#options' => [
      '0' => t('No'),
      '1' => t('Yes'),
    ],
    '#default_value' => !empty($settings['d7_youtube_showinfo']) ? $settings['d7_youtube_showinfo'] : '0',
  ];
  return $form;
}
