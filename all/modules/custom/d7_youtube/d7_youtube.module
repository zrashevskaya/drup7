/**
 * Implements hook_field_widget_form().
 */
function d7_youtube_field_widget_form(&$form, &$form_state, $field, $instance, $langcode, $items, $delta, $element) {
  switch ($instance['widget']['type']) {

    case 'd7_youtube':

      $fields = [
        'youtube_title' => t('Youtube video title'),
        'youtube_url' => t('Youtube video URL'),
        'youtube_width' => t('Youtube video width'),
        'youtube_height' => t('Youtube video height'),
        'youtube_control' => t('Video controller add'),
      ];

      foreach ($fields as $key => $label) {
        switch ($key) {
          case 'youtube_title':
            $element[$key] = [
              '#type' => 'textfield',
              '#title' => $label,
              '#default_value' => isset($items[$delta][$key]) ? $items[$delta][$key] : '',
            ];
            break;
          case 'youtube_url':
            $element[$key] = [
              '#type' => 'textfield',
              '#title' => $label,
              '#default_value' => isset($items[$delta][$key]) ? $items[$delta][$key] : '',
            ];
            break;
          case 'youtube_width':
            $element[$key] = [
              '#type' => 'textfield',
              '#title' => $label,
              '#default_value' => isset($items[$delta][$key]) ? $items[$delta][$key] : '',
            ];
            break;
          case 'youtube_height':
            $element[$key] = [
              '#type' => 'textfield',
              '#title' => $label,
              '#default_value' => isset($items[$delta][$key]) ? $items[$delta][$key] : '',
            ];
            break;
          case 'youtube_control':
            $element[$key] = [
              '#type' => 'checkbox',
              '#options' => [
                '0' => t('iFrame'),
                '1' => t('URL'),
              ],
              '#title' => $label,
              '#default_value' => isset($items[$delta][$key]) ? $items[$delta][$key] : 0,
            ];
            break;
          default:
            break;
        }
      }
      break;
  }

  return $element;
}

